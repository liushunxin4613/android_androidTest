<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_20"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:text="黄华力"
            style="@style/textview_item"
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:text="男"
            android:id="@+id/item_user_sex"
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/map_2x" />

        <TextView
            android:text="竹溪瓦米沟村4组"
            android:id="@+id/item_user_dizhi"
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10" />
        
         <TextView
            style="@style/textview_item"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_with"/>

        <TextView
            android:text="3"
            android:id="@+id/item_user_num"
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10" />
        
        <TextView
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_end"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:text="绝对贫困农户"
            android:id="@+id/item_user_state"
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:text="致贫原因"
            android:id="@+id/item_user_reason"
            style="@style/textview_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40" />
    </LinearLayout>

</LinearLayout>