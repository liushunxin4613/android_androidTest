<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <corners android:bottomRightRadius="500dp" android:topRightRadius="500dp" />

            <solid android:color="@color/radiu_white_button" />

            <stroke android:width="1px" android:color="@color/radiu_white_button_stroke" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:bottomRightRadius="500dp" android:topRightRadius="500dp" />

            <solid android:color="@color/radiu_white_button_press" />

            <stroke android:width="1px" android:color="@color/radiu_white_button_stroke" />
        </shape></item>

</selector>